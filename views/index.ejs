<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/khata.css">
    
    <title>Home</title>
</head>
<body>
    <div>
        <% if (!loggedIn) { %>
            <a href="/login">Login</a>
            <a href="/signup">Signup</a>
        <% } else { %>
            <a href="/logout">Logout</a>
        <% } %>
        <a href="/contact">Contact</a>
        <a href="/Addkhata">Add Fresh Khata</a>

        <% if (loggedIn) { %>
            <% khata_array.forEach((info) => { %>
                <div class="label">
                    <% if (info.isEncrypted) { %>
                        <div class="encrypted">encrypted</div>
                    <% } else{%>
                        <div class="visible">Available</div>
                    <% }%>
                    <p class="title">Khata Name: <%= info.khataname %></p>
                    <p class="date">Date: <%= info.date %></p>
                    
                    <% if(info.isEncrypted) { %>
                        <form method="post" action="/viewkhata/<%=info.date %>">
                           <input placeholder="passcode" name="pass" required>
                           <button type="submit">submit</button>
                        </form>
                    <%}else{%>
                        <a href="/viewkhata/<%= info.date %>" class="view">View Khata</a>
                        <a href="/deletekhata/<%= info.date %>"><img src="/img/delete.png" alt="delete" class="deletebtn"></a>
                    <%}%>
                        
                </div>
            <% }) %>
        <% } %>
    </div>
</body>
</html>
